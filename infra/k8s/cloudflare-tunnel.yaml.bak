---
apiVersion: v1
kind: ConfigMap
metadata:
  name: cloudflare-tunnel-config
  namespace: ev-saas
data:
  config.yaml: |
    tunnel: ${TUNNEL_ID}  # Replace with your actual tunnel ID
    credentials-file: /etc/cloudflared/credentials.json
    loglevel: info
    ingress:
      # API Gateway through nginx-gateway
      - hostname: api.nbevc.com
        service: http://nginx-gateway.nginx-gateway.svc.cluster.local:80
      
      # Admin Portal
      - hostname: console.nbevc.com
        service: http://admin-portal.ev-saas.svc.cluster.local:3000
      
      # Auth Service direct access
      - hostname: auth.nbevc.com
        service: http://auth-service.ev-saas.svc.cluster.local:8080
      
      # Individual service direct access
      - hostname: billing.nbevc.com
        service: http://billing-service.ev-saas.svc.cluster.local:8080
        
      - hostname: stations.nbevc.com
        service: http://station-service.ev-saas.svc.cluster.local:8080
        
      - hostname: users.nbevc.com
        service: http://user-service.ev-saas.svc.cluster.local:8080
        
      - hostname: notifications.nbevc.com
        service: http://notification-service.ev-saas.svc.cluster.local:8080
        
      - hostname: roaming.nbevc.com
        service: http://roaming-service.ev-saas.svc.cluster.local:8080
        
      - hostname: smartcharging.nbevc.com
        service: http://smart-charging-service.ev-saas.svc.cluster.local:8080
      
      # Monitoring services
      - hostname: prometheus.nbevc.com
        service: http://prometheus.ev-saas.svc.cluster.local:9090
      
      - hostname: grafana.nbevc.com
        service: http://grafana.ev-saas.svc.cluster.local:3000
      
      # Catch-all rule (required)
      - service: http_status:404

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cloudflare-tunnel
  namespace: ev-saas
spec:
  replicas: 2  # For high availability
  selector:
    matchLabels:
      app: cloudflare-tunnel
  template:
    metadata:
      labels:
        app: cloudflare-tunnel
    spec:
      containers:
      - name: cloudflared
        image: cloudflare/cloudflared:latest
        args:
        - tunnel
        - --config
        - /etc/cloudflared/config.yaml
        - run
        livenessProbe:
          httpGet:
            path: /ready
            port: 2000
          initialDelaySeconds: 10
          periodSeconds: 10
        volumeMounts:
        - name: config
          mountPath: /etc/cloudflared/config.yaml
          subPath: config.yaml
        - name: credentials
          mountPath: /etc/cloudflared/credentials.json
          subPath: credentials.json
      volumes:
      - name: config
        configMap:
          name: cloudflare-tunnel-config
      - name: credentials
        secret:
          secretName: cloudflare-tunnel-credentials 