{
    "id": "ev-platform",
    "realm": "ev-platform",
    "displayName": "EV Charging Platform",
    "enabled": true,
    "sslRequired": "external",
    "registrationAllowed": false,
    "loginWithEmailAllowed": true,
    "duplicateEmailsAllowed": false,
    "resetPasswordAllowed": true,
    "editUsernameAllowed": false,
    "bruteForceProtected": true,
    "roles": {
        "realm": [
            {
                "name": "platform_admin",
                "description": "Platform Administrator"
            },
            {
                "name": "cpo_admin",
                "description": "Charge Point Operator Admin"
            },
            {
                "name": "cpo_operator",
                "description": "Charge Point Operator"
            },
            {
                "name": "msp_admin",
                "description": "Mobility Service Provider Admin"
            },
            {
                "name": "msp_operator",
                "description": "Mobility Service Provider Operator"
            },
            {
                "name": "ev_driver",
                "description": "EV Driver"
            }
        ]
    },
    "clients": [
        {
            "clientId": "admin-portal",
            "name": "Admin Portal",
            "rootUrl": "http://localhost:3001",
            "baseUrl": "/",
            "surrogateAuthRequired": false,
            "enabled": true,
            "alwaysDisplayInConsole": false,
            "clientAuthenticatorType": "client-secret",
            "redirectUris": [
                "http://localhost:3001/*",
                "http://admin-portal:3000/*"
            ],
            "webOrigins": [
                "http://localhost:3001",
                "http://admin-portal:3000"
            ],
            "publicClient": true,
            "protocol": "openid-connect",
            "attributes": {
                "pkce.code.challenge.method": "S256"
            }
        },
        {
            "clientId": "auth-service",
            "name": "Authentication Service",
            "enabled": true,
            "clientAuthenticatorType": "client-secret",
            "secret": "defaultClientSecret",
            "bearerOnly": false,
            "serviceAccountsEnabled": true,
            "authorizationServicesEnabled": true,
            "directAccessGrantsEnabled": true
        },
        {
            "clientId": "api-gateway",
            "enabled": true,
            "clientAuthenticatorType": "client-secret",
            "secret": "defaultClientSecret",
            "publicClient": false,
            "redirectUris": [
                "http://localhost:8080/*",
                "http://api-gateway:8080/*"
            ],
            "webOrigins": [
                "+"
            ],
            "protocol": "openid-connect",
            "implicitFlowEnabled": false,
            "directAccessGrantsEnabled": true,
            "standardFlowEnabled": true
        },
        {
            "clientId": "smart-charging",
            "enabled": true,
            "clientAuthenticatorType": "client-secret",
            "secret": "defaultClientSecret",
            "publicClient": false,
            "redirectUris": [
                "http://localhost:8085/*",
                "http://smart-charging:8085/*"
            ],
            "webOrigins": [
                "+"
            ],
            "protocol": "openid-connect",
            "serviceAccountsEnabled": true,
            "implicitFlowEnabled": false,
            "directAccessGrantsEnabled": true,
            "standardFlowEnabled": true
        }
    ],
    "users": [
        {
            "username": "admin",
            "enabled": true,
            "emailVerified": true,
            "email": "admin@ev-platform.com",
            "firstName": "Admin",
            "lastName": "User",
            "credentials": [
                {
                    "type": "password",
                    "value": "admin",
                    "temporary": false
                }
            ],
            "realmRoles": [
                "platform_admin"
            ]
        },
        {
            "username": "user",
            "enabled": true,
            "emailVerified": true,
            "email": "user@ev-platform.com",
            "firstName": "Regular",
            "lastName": "User",
            "credentials": [
                {
                    "type": "password",
                    "value": "user",
                    "temporary": false
                }
            ],
            "realmRoles": [
                "ev_driver"
            ]
        }
    ]
}